<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PocketLibApplication" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#282828</item>
        <item name="colorPrimaryVariant">#D0D0D0</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">#212121</item>
        <item name="android:textColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>
</resources>